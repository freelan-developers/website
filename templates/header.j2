<!-- Fixed navigation bar -->
<nav id="main-navbar" class="navbar navbar-default navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand freelan-logo" href="{{ url_for('home') }}"></a>
    </div>

    <div class="nav-collapse">
	    <ul class="nav navbar-nav navbar-right">
	    	{% for item in menu.get('items') recursive %}
	    		{% if item.submenu %}
	    			<li class="dropdown">
	    				<a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ item.caption }} <b class="caret"></b></a>
	    				<ul class="dropdown-menu">
	    					{{ loop(item.submenu) }}
	    				</ul>
	    			</li>
	    		{% else %}
		    		{% if request.path == url_for(item.target) %}
			    		<li class="active"><a href="#">{{ item.caption }}</a></li>
		    		{% else %}
			    		<li><a href="{{ url_for(item.target) }}#{{ item.entity }}">{{ item.caption }}</a></li>
		    		{% endif %}
		    	{% endif %}
	    	{% endfor %}
	    </ul>
	</div>
</nav>